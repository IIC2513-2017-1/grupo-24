<big>Filtrar por:</big>
<% categories.each_with_index do |category, index|%>
  <%= form_tag category_filter_path, remote: true, style: "display:inline-block;margin: 0 5px 5px 0;" do %>
    <%= hidden_field_tag "filters", nil, id: 'category_'+category.id.to_s %>
    <%= hidden_field_tag "search", last_search %>
    <%= submit_tag category.name, required: true, class: "category-btn btn" %>
  <% end %>
<% end %>
<% if projects.size > 0 %>
  <h4> Coincidencias en contenido: <%= projects.size %> </h4>
  <ol class="container">
    <% projects.each do |project| %>
      <%= render partial: 'projects/preview', locals: { project: project, mines: false } %>
    <% end %>
  </ol>
<% end %>
