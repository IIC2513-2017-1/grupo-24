<div id="page">
  <% if flash[:alert] %>
    <p class="flash-error"><%= flash[:alert] %></p>
  <% end %>
  <% if flash[:notice] %>
    <p class="flash-notice"><%= flash[:notice] %></p>
  <% end %>
  <%= yield %>
</div>
<% if current_user && current_user.admin %>
<h3> Ver todos los <%= link_to 'Usuarios', users_path %></h3>
<% end %>
