<%= simple_form_for([:admin, category]) do |f| %>
  <% if category.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(category.errors.count, "error") %> prohibió guardar la categoría:</h2>

      <ul>
      <% category.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.input :name, label: 'Nombre' %>
  </div>

  <%= f.button :submit, 'Guardar categoría', class: "btn btn-success" %>

<% end %>
