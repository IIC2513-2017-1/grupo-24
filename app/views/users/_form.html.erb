<%= simple_form_for user do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibi칩 que se guardara:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="user form">
    <div class="form-fields">
      <div class="field">
        <%= f.input :username, required: true, label: 'Nombre de usuario' %>
      </div>

      <div class="field">
        <%= f.input :email, required: true, type: 'email', label: 'Correo electr칩nico' %>
      </div>

      <div class="field">
        <%= f.input :password, required: true, type: 'password', label: 'Contrase침a' %>
      </div>
      <div class="field">
        <%= f.input :password_confirmation, required: true, type: 'password', label: 'Confirmar contrase침a' %>
      </div>

      <div class="field">
        <%= f.input :name, label: 'Nombres' %>
      </div>

      <div class="field">
        <%= f.input :last_name, label: 'Apellidos' %>
      </div>

      <%= f.button :submit, 'Guardar', class: "btn" %>
    </div>
    <div class='avatar-display'>
      <div class="field">
        <label>Foto de perfil</label>
        <span class="btn" style="width:100%;">
          <%= f.file_field :avatar %>
        </span><br>
        <%= image_tag user.avatar.exists? ? user.avatar.url : 'default-avatar.png', class: 'edit-avatar' %>
      </div>
    </div>
  </div>
<% end %>
