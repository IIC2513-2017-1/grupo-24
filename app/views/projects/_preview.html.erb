<div class="rcorners1 <%= expired?(project)%>">
  <%= link_to 'X', project_path(project), method: :delete, data: { confirm: 'Â¿Estas seguro?' }, class: 'btn-delete' if mines%>
  <% if expired?(project) == 'expired' %>
  <h3 class="text-expired"><%= project.category.name %> - <big><%= 'EXPIRADO' %></big></h3>
  <% else %>
  <h3><%= project.category.name %></h3>
  <% end %>
  <%= image_tag project.image.exists? ? project.image.url : 'zelda.jpg' %>
  <h3 class="project-title"><%=link_to project.title, mines ? edit_project_path(project) : project_path(project) %>
  </h3>
  <h4>
    <%= truncate(project.description, length: 75, omission: '...') %>
  </h4>
  <span class="author-info">
    <strong><u> <%= mines ? "Publicado: #{project.publish ? 'Si' : 'No'}" : link_to(project.user.full_name, project.user) %> </u></strong><br>
    <%= "Hasta el #{l(project.end_date, format: '%d/%m')}" if project.end_date > Date.today %>
  </span>
</div>
