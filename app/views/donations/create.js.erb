$('#flashes').html("<%= escape_javascript render partial: 'layouts/flashes' %>");
$('#myProgress').html("<%= escape_javascript render partial: 'projects/progress_bar', locals: {project: @donation.project} %>");
move($('#myBar').data('percentage'));
$('.alert').fadeOut(4000);
$('.alert').on("mouseover", function(e) {
  $(this).stop(true).fadeIn(0);
});

// On mouse leave, start fade again
$('.alert').on("mouseleave", function(e) {
  $(this).fadeOut(4000);
});
